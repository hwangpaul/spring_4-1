<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.choa.s4.member.memberUser.MemberUserDAO">

	<select id="getIdCheck" resultType="int">
		select count (*) from member_1 where id = #{id}
	</select>

	<insert id="setMemberJoin" parameterType="MemberDTO">
		insert into member_1 values (member_asd.nextval, #{id}, #{pw}, #{name}, #{email})
	</insert>

	<delete id="setMemberDelete" parameterType="MemberDTO">
		delete member_1 where id=#{id}
	</delete>

	<update id="setMemberUpdate" parameterType="MemberDTO">
		update member_1 set name=#{name}, email=#{email} where id=#{id}
	</update>	

	<select id="getMemberLogin" parameterType="MemberDTO" resultType="MemberUserDTO">
		select * from member_1 where id = #{id} and pw = #{pw}
	</select>
	

	
	
</mapper>    